{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/input/macro.njk"         import govukInput %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "macros/title.njk"                         import title %}

{% block pageTitle %}
  {{ title(messages("contactTelephoneNumber.title"), form.errors) }}
{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: messages("site.back")
  }) }}
{% endblock %}

{% block mainContent %}
  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% if form.errors.length > 0 %}
          {{ govukErrorSummary({
            "titleText": messages("error.summary.title"),
            "errorList": form.errors
          }) }}
        {% endif %}

        <form action="{{ routes.controllers.contactdetails.ContactTelephoneNumberController.onSubmit().url }}" method="post">

          {{ csrf() | safe }}

          {{ govukInput({
            label: {
              text: messages('contactTelephoneNumber.heading', primaryContactName),
              isPageHeading: true,
              classes: "govuk-label--xl"
            },
            hint: {
              text: messages('contactTelephoneNumber.hint')
            },
            id: "telephoneNumber",
            name: "telephoneNumber",
            value: form.telephoneNumber.value,
            errorMessage: form.telephoneNumber.error
          }) }}

          {{ govukButton({
            text: messages("site.saveAndContinue"),
            attributes:{"id": "submit"}
          }) }}

        </form>

      </div>
    </div>
  </div>

{% endblock %}
