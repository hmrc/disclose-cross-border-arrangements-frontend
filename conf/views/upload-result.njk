{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "macros/title.njk"                         import title %}


{% block beforeContent %}
  {{ govukBackLink({
      text: messages("site.back")
      }) }}
{% endblock %}

{% block additionalHeaders %}
<script src="{{ routes.controllers.Assets.versioned("javascripts/upload-spinner.js").url }}"></script>
<link href="/disclose-cross-border-arrangements/assets/stylesheets/spinner.css" media="not speech" rel="stylesheet" type="text/css">
{% endblock %}

{% block mainContent %}
<div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

      <input type="hidden" id="dac6UploadRefreshUrl"     value="{{routes.controllers.UploadFormController.getStatus().url}}" />

      <div id="processing" aria-live="polite" class="govuk-!-margin-bottom-5">
          <h2 class="govuk-heading-m">We are checking your file, please wait</h2>
          <div>
            <div class="ccms-loader"></div>
          </div>
      </div>

      </div>
    </div>
  </div>
{% endblock %}