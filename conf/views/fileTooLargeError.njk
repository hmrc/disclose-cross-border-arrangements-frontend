{% extends "includes/layout.njk" %}

{% from "macros/title.njk"                         import title %}
{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}

{% block pageTitle %}
  {{ title(messages("fileToLargeError.title")) }}
{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
      text: messages("site.back"),
      href: routes.controllers.UploadFormController.onPageLoad().url
    })
  }}
{% endblock %}

{% block mainContent %}

  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-xl">
          {{ messages("fileToLargeError.heading") }}
        </h1>

        <p class="govuk-body"> {{ messages("fileToLargeError.instruction") }} </p>

        <ui class="govuk-list">
            <li>
                <a href="{{ routes.controllers.UploadFormController.onPageLoad().url }}" class="govuk-link"> {{ messages("fileToLargeError.uploadNewFileLink") }}</a>
            </li>
            <li>
                <a href="{{ guidanceLink }}" class="govuk-link" rel="noreferrer noopener" target="_blank"> {{ messages("fileToLargeError.guidanceLink") }}</a>
            </li>
        </ui>

      </div>
    </div>
  </div>

{% endblock %}
