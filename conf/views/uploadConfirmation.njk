{% extends "includes/layout.njk" %}

{% from "macros/title.njk"                         import title %}
{% from "govuk/components/panel/macro.njk"         import govukPanel %}

{% block pageTitle %}
  {{ title(messages("uploadConfirmation.title")) }}
{% endblock %}

{% block mainContent %}

  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {{ govukPanel({
          titleText: messages("uploadConfirmation.panel.title"),
          html: disclosureID
        }) }}

        <div class="govuk-body">

            {% if config.sendEmailToggle %}
                <p>{{ messages("uploadConfirmation.p1", email) }}</p>
            {% endif %}

            <p>{{ messages("uploadConfirmation.p2", messageRefID) }}</p>

            <h2 class="govuk-heading-m">
              {{ messages("uploadConfirmation.h2") }}
            </h2>

            <p>{{ messages("uploadConfirmation.p3") }}</p>
            <p>{{ homePageLink | safe }}</p>
            <p>{{ betaFeedbackSurvey | safe }}</p>
        </div>

      </div>
    </div>
  </div>

{% endblock %}
