{% extends "includes/layout.njk" %}

{% from "macros/title.njk"                         import title %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% block pageTitle %}
  {{ title(messages("replaceConfirmation.title")) }}

{% endblock %}

{% block mainContent %}

  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-panel__title">
          {{ govukPanel({
            titleText: messages("replaceConfirmation.heading")
          }) }}
        </h1>
        <p class="govuk-body">
            {{ messages("replaceConfirmation.p1") }}
        </p>
        <h2 class="govuk-heading-m">{{ messages("replaceConfirmation.heading.two") }}</h2>
        <p class="govuk-body">{{ messages("replaceConfirmation.p2") }}</p>

        <ul class="govuk-list">
          <li>{{ messages("confirmation.li1") }}
            <a class="govuk-link" href="{{ routes.controllers.UploadFormController.onPageLoad().url }}">{{messages("confirmation.li1.a")}}</a>.
          </li>
          <li>
            <a class="govuk-link" href="#">{{ messages("confirmation.li2.a") }}</a> {{ messages("confirmation.li2") }}
          </li>
        </ul>
      </div>
    </div>
  </div>

{% endblock %}
