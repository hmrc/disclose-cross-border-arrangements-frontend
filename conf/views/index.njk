{% extends "includes/layout.njk" %}

{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "macros/title.njk"                         import title %}

{% block pageTitle %}
  {{ title(messages("index.title")) }}
{% endblock %}

{% block mainContent %}

  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-xl">
          {{ messages("index.heading") }}
        </h1>

        <p class="govuk-body"> {{ messages("index.guidance")}} </p>

        {{ govukButton({
                          text: messages("index.continue"),
                          href: routes.controllers.UploadFormController.onPageLoad().url,
                          attributes: {id:"submit"}
                        }) }}

        {% if hasSubmissions %}
         <p class="govuk-body">
            <a href="{{routes.controllers.HistoryController.onPageLoad().url}}">{{messages("history.link")}}</a>
         </p>
        {% endif %}

        {% if contactDetailsToggle %}
          <p class="govuk-body" id="contactDetails">
            <a href="{{routes.controllers.ContactDetailsController.onPageLoad().url}}">{{messages("contactDetails.link")}}</a>
          </p>
        {% endif %}

      </div>
    </div>
  </div>

{% endblock %}
