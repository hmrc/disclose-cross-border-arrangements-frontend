{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "macros/title.njk"                         import title %}
{% from "govuk/components/summary-list/macro.njk"  import govukSummaryList %}
{% from "govuk/components/button/macro.njk"        import govukButton %}

{% block pageTitle %}
  {{ title(messages("contactDetails.title")) }}
{% endblock %}

{% block mainContent %}

  {{ govukBackLink({
    text: messages("site.back")
  }) }}

  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-xl">
          {{ messages("contactDetails.heading") }}
        </h1>

        <h2 class="govuk-heading-m">
          {{ messages("contactDetails.h2") }}
        </h2>

        {{ govukSummaryList({
          rows: contactDetails
        }) }}

        <form action="{{ routes.controllers.ContactDetailsController.onSubmit().url }}" method="post">
          {{ csrf() | safe }}

          {{ govukButton({
             text: messages("contactDetails.button"),
             preventDoubleClick: true,
             attributes: {id:"submit"}
          }) }}
        </form>

      </div>
    </div>
  </div>

{% endblock %}
